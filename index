<script>
$(document).ready(function(){
  $(".menuclosed").click(function() {
    $(this).toggleClass("menuopen");
  });
    $(".menu-toggle").click(function() {
    $("ul").toggleClass("visible");
  }); // menu function
  $(".pic2").click(function() {
    $(".projectimg").css("background", "blue");
  });
  $(".pic3").click(function() {
    $(".projectimg").css("background", "orange");
  });
  $(".pic4").click(function() {
    $(".projectimg").css("background", "purple");
  });
  $(".pic5").click(function() {
    $(".projectimg").css("background", "green");
  });
}); //ready function
(function () {
	$('.hamburger-menu').on('click', function() {
		$('.bar').toggleClass('animate');
	})
})();
</script>



